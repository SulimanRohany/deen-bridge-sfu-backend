{
  "name": "sfu-backend",
  "version": "1.0.0",
  "description": "Production-ready Selective Forwarding Unit (SFU) backend using Node.js + TypeScript + mediasoup",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:load": "artillery run tests/load/load-test.yml",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "docker:build": "docker build -t sfu-backend .",
    "docker:run": "docker run -p 3000:3000 sfu-backend"
  },
  "keywords": [
    "sfu",
    "webrtc",
    "mediasoup",
    "typescript",
    "nodejs",
    "realtime",
    "video-conference"
  ],
  "author": "Deen Bridge Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.7.9",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "express-ws": "^5.0.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jwks-client": "^2.0.5",
    "knex": "^3.0.1",
    "mediasoup": "^3.19.7",
    "module-alias": "^2.2.3",
    "node-cron": "^3.0.3",
    "pg": "^8.13.1",
    "pino": "^9.4.0",
    "pino-pretty": "^11.0.0",
    "prom-client": "^15.1.3",
    "uuid": "^11.0.3",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "artillery": "^2.0.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "_moduleAliases": {
    "@": "src",
    "@/config": "src/config",
    "@/types": "src/types",
    "@/utils": "src/utils",
    "@/services": "src/services",
    "@/middleware": "src/middleware",
    "@/controllers": "src/controllers",
    "@/models": "src/models"
  }
}
